{
    "name": "syncspace-root",
    "private": true,
    "scripts": {
        "server": "cd server && pnpm run dev",
        "client": "cd client && pnpm run dev",
        "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
        "build": "pnpm run install-client && cd client && pnpm run build",
        "start": "cd server && pnpm start",
        "heroku-postbuild": "pnpm run build",
        "install-client": "cd client && pnpm install --frozen-lockfile --no-strict-peer-dependencies",
        "install-server": "cd server && pnpm install --frozen-lockfile --no-strict-peer-dependencies",
        "install-all": "pnpm run install-client && pnpm run install-server"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}